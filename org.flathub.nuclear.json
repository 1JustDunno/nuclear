{
    "app-id": "org.flathub.nuclear",
    "runtime": "org.flathub.nuclear",
    "runtime-version": "0.6.3",
    "branch": "stable",
    "sdk": "org.flathub.nuclear",
    "base": "io.atom.electron2.BaseApp",
    "command": "nuclear",
    "finish-args": [
        "--share=network",
        "--share=x11",
        "--share=ipc",
        "--filesystem=host"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "NPM_CONFIG_LOGLEVEL": "info"
        }
    }

}